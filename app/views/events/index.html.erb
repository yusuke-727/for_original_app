<h1>Events Index Page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Scheduled date</th>
      <th>Created_at</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.content %></td>
        <td><%= event.scheduled_date.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= event.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', event_path(event), class: 'show-event' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: 'edit-event' %></td>
        <td><%= link_to 'Destroy', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'destroy-event' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
